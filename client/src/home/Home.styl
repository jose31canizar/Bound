time = 0.7s
.home
  width: 100vw
  height: 100vh
  transition: transform time, opacity time
  transition-timing-function: ease-in-out
  display: flex
  position: absolute
  // top: 0
  // perspective: 1000px
  justify-content: center
  align-items: center
  @media all and (max-width: 800px)
    flex-direction: column
  .section-entrance
    transition: 0.5s ease-in-out
    @media all and (max-width: 800px)
      height: 50%
  img
    object-fit: cover
    z-index: -1
    filter: brightness(100%) contrast(100%)
    height: 250px
    transition: 0.15s ease
  .svg-icon
    padding: 40px
    background: white
    box-shadow: 0px 0px 25px 10px rgba(255,255,255,1)
    fill: none
    stroke: grey
    stroke-width: 20
    @media all and (max-width: 800px)
      box-shadow: none
      background: #927a7a
      stroke: white
  > span
    width: 50%
    height: 100%
    display: flex
    justify-content: center
    align-items: center
    letter-spacing: 0.5em
    flex-direction: column
    @media all and (max-width: 800px)
      width: 100%
  > :nth-child(2)
    border-right: 1px solid black
    @media all and (max-width: 800px)
      border-right: none
      border-bottom: 1px solid black
  > :nth-child(3)
    border-left: 1px solid black
    @media all and (max-width: 800px)
      border-right: none
      border-bottom: 1px solid black
  > span > .board-link
    display: flex
    width: 50%
    justify-content: center
    align-items: center
    cursor: pointer
    :nth-child(1)
      transform: translate3d(0,10px,20px) rotate3d(1,0,0,90deg)
      transform-origin: bottom
      color: white
    :nth-child(2)
      transform: translate3d(0,0,20px) rotate3d(1,0,0,0deg)
      transform-origin: bottom
    label
      font-size: 2em
      transition: 0.5s ease
      display: block
      position: absolute
      cursor: pointer
      color: white
  .board-link:hover :nth-child(1)
    transform: translate3d(0,0,20px) rotate3d(1,0,0,0deg)
  .board-link:hover :nth-child(2)
    transform: translate3d(0,10px,20px) rotate3d(1,0,0,-180deg)
    color: #ff5c5c
  .board-link:hover > img
    filter: brightness(110%) contrast(20%)
