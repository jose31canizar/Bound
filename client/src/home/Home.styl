.home
  width: 100%
  height: 100vh
  display: flex
  perspective: 1000px
  > span
    width: 50%
    display: flex
    justify-content: center
    align-items: center
    letter-spacing: 0.2em
    flex-direction: column
  > :nth-child(1)
    border-right: 1px solid black
  > :nth-child(2)
    border-left: 1px solid black
  > span > div
    display: flex
    width: 100%
    justify-content: center
    align-items: center
    cursor: pointer
    :nth-child(1)
      transform: translate3d(0,0,20px) rotate3d(1,0,0,90deg)
      transform-origin: bottom
      color: black
    :nth-child(2)
      transform: translate3d(0,0,20px) rotate3d(1,0,0,0deg)
      transform-origin: bottom
    label
      transition: 0.5s ease
      display: block
      position: absolute
  div:hover :nth-child(1)
    transform: translate3d(0,0,20px) rotate3d(1,0,0,0deg)
  div:hover :nth-child(2)
    transform: translate3d(0,0,20px) rotate3d(1,0,0,-180deg)
    color: #e8d3d3
